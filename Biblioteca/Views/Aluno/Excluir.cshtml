@model AlunoModel

<div class="container bg-dark p-5 rounded-5">
	<div class="mb-5 text-center">
		<h1 class="text-light">Excluir Aluno</h1>
	</div>

	<form method="post" asp-controller="Aluno" asp-action="Excluir">
		<input type="hidden" asp-for="Id" />

		<h2 class="text-light">Tem certeza que deseja excluir?</h2>

		<div class="form-group">
			<label for="Name" class="text-light">Name</label>
			<input type="text" class="form-control" asp-for="Name" disabled id="Nome" placeholder="Informe seu nome" />
			<span class="text-danger" asp-validation-for="Name"></span>
		</div>
		<div class="form-group">
			<label for="CPF" class="text-light">CPF</label>
			<input type="text" class="form-control" asp-for="CPF" disabled id="CPF" placeholder="Informe seu CPF" />
			<span class="text-danger" asp-validation-for="CPF"></span>
		</div>
		<div class="form-group">
			<label for="telefone" class="text-light">telefone</label>
			<input type="text" class="form-control" asp-for="telefone" disabled id="Telefone" placeholder="Informe seu telefone" />
			<span class="text-danger" asp-validation-for="telefone"></span>
		</div>
		<div class="form-group">
			<label for="email" class="text-light">email</label>
			<input type="text" class="form-control" asp-for="email" disabled id="Email" placeholder="Informe seu email" />
			<span class="text-danger" asp-validation-for="email"></span>
		</div>
		<div class="d-flex gap-5 mt-5">
			<button type="submit" class="btn btn-success w-50">Enviar</button>
			<a class="btn btn-primary w-50" asp-controller="Aluno" asp-action="Index">Voltar</a>
		</div>
	</form>
</div>

